<div class="sign-up-form-our-famtravel-app">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs session-form">
    <%= f.input :first_name,
                required: true,
                label_html:  { class: "first-name-field"}  %>
    <%= f.input :last_name,
                required: true,
                label_html:  { class: "last-name-field"}  %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                label_html:  { class: "email_field" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                label_html:  { class: "password_field"}  %>
    <%= f.input :password_confirmation,
                required: true,
                label_html:  { class: "password-confirmation-field"}  %>
      <input type="checkbox" name="user[baby]" id="baby">
      <label for="baby">
    <%= image_tag "pram.png", alt: "Le Wagon", width: 80 %>      </label>
    <%#= f.input :baby,
                label_html:  { class: "pram"}  %>
     <input type="checkbox" name="user[toddler]" id="toddler">
      <label for="toddler">
    <%= image_tag "sandbox.png", alt: "Le Wagon", width: 80 %>      </label>
    <%#= f.input :child,
                label_html:  { class: "bike"}  %>
    <input type="checkbox" name="user[child]" id="child">
      <label for="child">
    <%= image_tag "bike.png", alt: "Le Wagon", width: 80 %>      </label>
      <div class="d-flex">
       <%= f.button :submit, class: "two_last_buttons_signup" %>
       <%= render "devise/shared/links" %>
     </div>
<% end %>
</div>
