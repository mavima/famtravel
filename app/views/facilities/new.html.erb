
<div class="all-share-your-tip">
<div class="container">
<h2>Share your tips with other users</h2>

<%= Category.find(params[:category_id]).name if params[:category_id] %>
<div>
    <%= simple_form_for @facility do |f| %>
    <%= f.input :name, label: "Name" %>
    <%= f.input :address, label: "Address" %>
    <%= f.input :website_link, label: "Website" %>
    <%= f.input :rating, collection: 1..5, prompt: "Give a rating", selected: 5 %>
    <%= f.association :features, collection: @features, as: :check_boxes %>
    <%= f.input :photo %>
    <%= f.input :category_id, collection: @categories, as: :hidden %>
    <%= f.input :city_id, collection: @cities %>
    <%= link_to "Can't find your city?", new_city_path(category_id: params[:category_id]), { :class=>"remove_text_decoration" } %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Add", class: "btn btn-primary", class: "black-bordered-btn-two" %>
    <% end %>
  </div>
</div>
</div>

</div>
</div>
