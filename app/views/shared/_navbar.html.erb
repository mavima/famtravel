<div class="container-nav">
  <% if current_page?("/")  %>
  <div class="burger dropdown">
    <i class="fas fa-bars" id="openSlideOut"></i>
  </div>
  <% else %>
    <div class="burger dropdown with-home" style="background-color: RGBA(255,255,255,0.7)">
      <i class="fas fa-bars" id="openSlideOut"></i>
      <%= link_to root_path do %>
        <i class="fas fa-home"></i>
      <% end %>
    </div>
  <% end %>
</div>

<nav id="menu" hidden>
  <header>
    <div id="closeSlideOut">

    </div>
    <div class="slide-content">
      <% if current_user.present? %>
      <ul>
        <li>
          <div class="user-firstname"><%= current_user.first_name %></div>
        </li>
        <li>
        <% if current_user.photo.present? %>
          <%= cl_image_tag current_user.photo, class: "avatar"%>
        <% else %>
          <img src="https://i.pinimg.com/originals/77/fd/f0/77fdf077b7dae33dc550d64142007a35.jpg" alt="">
        <% end %>
        </li>

        <div class="slidepage">
          <li>
           <%= link_to "Home", root_path %>

         </li>
         <li>
           <%= link_to "About us", about_path %>

         </li>
         <li>
          <%= link_to "My profile", user_path(current_user)  %>
        </li>

        <li>
          <%= link_to "Add a restaurant", new_category_facility_path(Category.find_by_name("Restaurant").id) %>
        </li>
        <li>
          <%= link_to "Add a playground", new_category_facility_path(Category.find_by_name("Playground").id) %>
        </li>
        <li>
          <%= link_to "Add an activity", new_category_facility_path(Category.find_by_name("Activity").id) %>
        </li>
        <li>
          <%= link_to "Add a restroom", new_category_facility_path(Category.find_by_name("Restroom").id) %>
        </li>
      </ul>
    </div>
    <div class="logout">
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "button-ghost" %>
    </div>

    <% else %>
    <h3>Welcome to Famtravel</h3>

    <p><%= link_to "Log in", new_user_session_path %></p>
    <% end %>
  </div>

</header>
</nav>


<script>
  const showMenu = () => {
    const menu = document.getElementById("menu");
    menu.hidden = false
  }

  setTimeout(showMenu, 100);

</script>
